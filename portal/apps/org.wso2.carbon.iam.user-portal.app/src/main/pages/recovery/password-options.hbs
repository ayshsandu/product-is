{{layout "unprivilege"}}
{{title (t "user-portal.user.password.recovery") " | " @config.appName}}
{{css "css/user-portal.css"}}
{{js "js/script.js"}}
{{js "js/left-navigation.js"}}
{{js "js/recover-password-options.js"}}
{{fragment "org.wso2.carbon.uuf.common.foundation.ui.uuf-client"}}

{{#fillZone "content"}}
    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            <i class="icon fw fw-error"></i><strong>{{t "user-portal.user.password.recovery.error"}}</strong>
            {{t errorMessage}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
            <span aria-hidden="true">
                <i class="fw fw-cancel"></i>
            </span>
            </button>
        </div>
    {{/if}}

    <div class="page-content-wrapper">
        <div class="container">
            <div class="recover-form-option-wrapper">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div class="brand-container add-margin-bottom-5x">
                            <div class="row">
                                <div class="col-xs-6 col-sm-3 col-md-9 col-lg-9 center-block float-remove-sm float-remove-xs pull-right-md pull-right-lg">
                                    <img class="img-responsive brand-spacer" src="{{public "images/logo-white.png"}}"
                                         alt="wso2-logo">
                                </div>
                            </div>
                            <h2 class="text-center-sm text-center-xs text-center-md text-right">{{@config.appName}}</h2>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 login">
                        <div class="data-container">
                            <form class="form-horizontal">
                                <h3>{{t "user-portal.user.password.recovery.for"}} <span
                                        class="username-text"><i>{{@queryParams.username}}</i></span></h3>
                                {{#if hasMultipleOptions}}
                                    <p>{{t "user-portal.user.password.recovery.select.options"}}</p>

                                    <div class="form-group add-margin-top-5x">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <label class="custom-radio">
                                                <input type="radio" name="recover-option-email">
                                                <span class="helper">{{t "user-portal.user.password.recovery.with.email"}}</span>
                                            </label>

                                            <div class="recover-option-container">
                                                <div class="form-group">
                                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                                        <label class="control-label">{{t "user-portal.captcha"}}</label>
                                                        <img width="100%" src="images/captcha.jpg">
                                                    </div>
                                                </div>
                                                <div class="form-group add-margin-top-5x">
                                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                                        <button type="submit" id="pwd-recover-email"
                                                                class="btn btn-default btn-primary add-margin-right-2x">{{t "user-portal.recover"}}</button>
                                                        <button type="submit" id="pwd-recover-cancel"
                                                                class="btn btn-default btn-secondary hidden-xs hidden-sm">{{t "user-portal.cancel"}}</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                            <label class="custom-radio">
                                                <input type="radio" name="recover-option-question">
                                                <span class="helper">{{t "user-portal.user.password.recovery.with.security.questions"}}</span>
                                            </label>
                                            {{defineZone "question"}}
                                        </div>
                                    </div>
                                {{/if}}
                            </form>
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <a href="{{@contextPath}}/recovery/password" class="add-margin-top-2x">{{t
                                    "user-portal.user.try.with.another.username"}}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/fillZone}}