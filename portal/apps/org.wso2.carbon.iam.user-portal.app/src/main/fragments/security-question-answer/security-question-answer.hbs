{{log this}}

<div class="recover-option-container">
    {{#each @params.questions}}
        <div class="form-group add-margin-bottom-5x">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <label class="control-label">{{t "user-portal.user.question"}}</label>
                <p>{{question}}</p>
            </div>
        <!--</div>-->
        <!--<div class="form-group">-->
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                <label for="input-sec-question" class="control-label">{{t "user-portal.user.answer"}}</label>
                <input type="text" class="form-control" id="input-sec-question">
            </div>
        </div>
    {{/each}}
    <div class="form-group add-margin-top-5x">
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
            <button type="submit"
                    class="btn btn-default btn-primary add-margin-right-2x">{{t "user-portal.recover"}}</button>
            <button type="submit"
                    class="btn btn-default btn-secondary hidden-xs hidden-sm">{{t "user-portal.cancel"}}</button>
        </div>
    </div>
</div>
